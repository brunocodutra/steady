{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
    },
    "target": "ES2017",
    "moduleResolution": "node",
    "jsx": "React",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "spec"],
}
